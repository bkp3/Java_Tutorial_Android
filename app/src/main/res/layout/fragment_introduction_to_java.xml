<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.introductionToJava.IntroductionToJavaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f2f2">

        <LinearLayout
            android:id="@+id/idj1.1ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:background="#ffffff"
            android:elevation="3dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.1 Introduction :-"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="Java is a computer programming language. It is developed by James Gosling in 1991 at Sun Microsystems.(Now owned by Oracle corporation)"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/idj1.2ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="#ffffff"
                android:elevation="3dp"
                android:layout_below="@+id/idj1.1ll"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.2 Editions :-"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i. JSE ( Java Standard Edition )"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ii. JEE ( Java Enterprise Edition )"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iii. JME ( Java Micro Edition )"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iv. JCT ( Java Card Technology )"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idj1.3ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="#ffffff"
                android:elevation="3dp"
                android:layout_below="@+id/idj1.2ll"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.3 Features of Java :-"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i. Simple"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ii. Object-Oriented"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="iii. Platform independant"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iv. Auto memory management"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="v. Mutli threaded"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vi. Robust"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="vii. Secure"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="viii. Portable"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ix. Distributed"
                    android:textSize="15sp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idj1.4ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="#ffffff"
                android:elevation="3dp"
                android:layout_below="@+id/idj1.3ll"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.4 Compile and Run Java Program :-"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Hello World Program."
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/codeBackground"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fadingEdge="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class HelloWorld {"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="public static void main(String[] args) {"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System.out.println(&quot; Hello World &quot;);"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="20dp"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="}"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="}"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To complile and run java program from command prompt we follow these command which is given below."
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For compiling :-"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Javac HelloWorld.java ;"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For Run program :-"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Java HelloWorld ;"
                    android:background="@android:color/black"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OUTPUT:-\n Hello World"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/idj1.5ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="3dp"
                android:background="#ffffff"
                android:elevation="3dp"
                android:layout_below="@+id/idj1.4ll"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.5 Difference between JDK, JRE and JVM :-"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="There are two principle provide in the java SE platform family :-"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i. JDK"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ii. JRE"
                    android:textSize="15dp"
                    android:layout_marginLeft="100dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JDK provides the environment to develop and excute the java program."
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JDK contains two parts."
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i. One part contains javac, which convert source code into byte code."
                    android:textSize="15dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ii. Second part is JRE which contains utilites like java which help in running the code."
                    android:textSize="15dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JRE provides the libraries, The JVM and other components to run only java byte code."
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JVM is a software. It provides runtime environment in which java bytecode can be executed."
                    android:textSize="15dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>